                        <TextView
                            android:id="@+id/save_length3_stick"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/save_type_pic3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:scaleType="fitCenter"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/save4_stick"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/save_name4_stick"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:textColor="#FF495A80"
                            android:gravity="center"
                            android:text="消声器4"/>
                        <TextView
                            android:id="@+id/save_area4_stick"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/save_devol4_stick"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:layout_marginTop="5dp"
