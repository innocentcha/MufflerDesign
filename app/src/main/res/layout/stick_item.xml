<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/stick_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_gravity="center"
        />

    <Spinner
        android:id="@+id/stick_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        />

    <Spinner
        android:id="@+id/stick_size"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        />

    <Spinner
        android:id="@+id/stick_length"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        />

    <Spinner
        android:id="@+id/stick_cavity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/stick_vol"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id="@+id/stick_area"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/stick_decvol"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/stick_degree"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/stick_peek"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/stick_type_pic"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:gravity="center" />

    <Button
        android:id="@+id/stick_bt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/stick_save"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:gravity="center" />

</LinearLayout>